<link rel="stylesheet" type="text/css" href="<%= assetPath('css/users-profile.css') %>">

        <main>
                <h1>Codeial / Profile</h1>
                <img id="img" src="<%= user.avtar %>" width="20%">
                
                <% if(user.id == profile_user.id){ %>
                        <form id="update-form" action="/users/update/<%= profile_user.id %>" method="POST" enctype="multipart/form-data">
                                <input type="text" name="name" placeholder="Your Name" required>
                                <input type="text" name="email" placeholder="Your Email" required>
                                <input id="change-avtar" type="file" name="avtar" placeholder="Profile Picture">
                                <input type="submit" value="Update">
                        </form>
                <% }else{ %>
                       <p><%= profile_user.name %></p>
                       <p><%= profile_user.email %></p>
                       <a class="toggle-friend-btn" href="/friends/add-friend/?id=<%= profile_user.id %>">
                        <% if(locals.removeFriend){ %>
                                Remove Friend
                        <% }else{ %>
                                Add Friend
                        <% } %>
                </a>
                <% } %>
        </main>
<script type="text/javascript" src="<%= assetPath('javascript/user_image_preview.js') %>"></script>
<script type="text/javascript" src="<%= assetPath('javascript/toggle_friend.js') %>"></script>