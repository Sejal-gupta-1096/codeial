<link type="text/css" rel="stylesheet" href="/css/home.css">
<script src="https://kit.fontawesome.com/90f89e9e87.js" crossorigin="anonymous"></script>

<main>
        <div id="block"></div>
        <div id="feed-container">
                <h1>Codeial / Home</h1>
                <section>
                        <% if(locals.user){ %>
                        <form id="post-form" action="/posts/add-post" method="POST">
                                <textarea name="content" rows="3" cols="30" placeholder="Type Here.." required></textarea>
                                <input type="submit" value="Post" >
                        </form>
                        <% } %>
                </section>
        
                <section id="posts-container">
                        <ul id="posts-list">
                                <% for(i of posts){ %>
                                        <%- include("_posts") -%>
                                        
                                <% } %>
                        </ul>
                        
        
                </section>
        </div>
        
        <aside>
                <div id="users-list">
                        <h4>Users</h4>
                        <% for(u of all_users){ %>
                                <p>
                                        <a href="/users/profile/<%= u.id %>">
                                        <%= u.name %></a>
                                </p>
                        <% } %>
                </div>
                <% if(locals.user) { %>
                        <div id="friends-list">
                                <h4>Friends</h4>
                                <% for(friends of user2.friends){ %>
                                        <% if(locals.user._id != user2.friends._id){ %>
                                               <p><%= friends.name %></p> 
                                        <% } %>
                                <% } %>
                        </div>
                <% } %> 
                
                
        </aside>
</main>
